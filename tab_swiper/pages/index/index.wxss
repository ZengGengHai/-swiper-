 @import "../../templates/school-introduction/school-introduction.wxss";
 @import "../../templates/school-association/school-association.wxss";
 @import "../../templates/school-news/school-news.wxss";
 page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-family: '微软雅黑', Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', Arial, sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

 page, .page,.page_tab{
    height: 100%;
      width:100vw;
}
.page__bd {
    padding-bottom: 0;
}


.school-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 5vh;
  padding-top:5rpx;
  padding-bottom:5rpx;
  position: fixed;
  z-index: 500;
  top: 0px;
  width: 100vw;
  background-color: #921616; 
}  

.school-navbar__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;     
  text-align: center;
  font-size: 0;
  color:#CCCCCC;
} 
.school-navbar__item.school-bar__item_on {
  color: white;
} 
.school-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 12rpx;
  width: 6em;
  height: 6rpx;
  background-color: white;
  -webkit-transition: -webkit-transform .3s;
  transition: -webkit-transform .3s;
  transition: transform .3s;
  transition: transform .3s, -webkit-transform .3s;
}
.school-navbar__title {
  display: inline-block;
  font-size: 28rpx;
  max-width: 8em;
  width: 6em;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
.school-tab__content { 
    background-color: #fafafa;
}
.tab-view {
    background-color: #fafafa;
}
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent
}

.school-tab_panel{
  margin-top:5vh;
}
